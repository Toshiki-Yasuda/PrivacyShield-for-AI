{
  "manifest_version": 3,
  "name": "PrivacyShield for AI",
  "version": "0.1.0",
  "description": "企業向けAI利用時の個人情報保護ツール - 個人情報を自動検知・マスキングし、安全なプロンプト入力を支援",
  "author": "AY Consulting",
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "PrivacyShield for AI"
  },

  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "sidePanel",
    "contextMenus",
    "clipboardRead",
    "clipboardWrite"
  ],

  "options_page": "options/index.html",

  "host_permissions": [
    "https://claude.ai/*",
    "https://chat.openai.com/*"
  ],

  "background": {
    "service_worker": "background/background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],

  "side_panel": {
    "default_path": "sidepanel/index.html"
  },

  "web_accessible_resources": [
    {
      "resources": ["icons/*", "lib/*"],
      "matches": ["https://claude.ai/*", "https://chat.openai.com/*"]
    }
  ],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
